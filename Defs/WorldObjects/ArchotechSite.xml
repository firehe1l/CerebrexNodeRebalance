<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Site part to spawn Signal Amplifier in ancient complex -->
  <SitePartDef>
    <defName>Cerebrex_SignalAmplifierSite</defName>
    <label>signal amplifier cache</label>
    <siteTexture>World/WorldObjects/Sites/GenericSite</siteTexture>
    <approachOrderString>Approach {0}</approachOrderString>
    <arrivalModeForRaidingMessage>arrive by</arrivalModeForRaidingMessage>
    <wantsThreatPoints>true</wantsThreatPoints>
    <workerClass>SitePartWorker_ItemStash</workerClass>
    
    <arrivedLetterLabel>Arrived</arrivedLetterLabel>
    <arrivedLetterDef>PositiveEvent</arrivedLetterDef>
  </SitePartDef>

  <!-- GenStep to spawn Signal Amplifier in maps -->
  <GenStepDef>
    <defName>Cerebrex_SpawnSignalAmplifier</defName>
    <order>700</order>
    <genStep Class="CerebrexRebalance.GenStep_SpawnSignalAmplifier" />
  </GenStepDef>
</Defs>
