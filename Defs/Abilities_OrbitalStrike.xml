<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Orbital Strike Ability - Like Imperial permit bombardment -->
  <AbilityDef>
    <defName>Cerebrex_OrbitalStrike</defName>
    <label>orbital mechanoid strike</label>
    <description>Call down an orbital bombardment from mechanoid satellites. Highly destructive but cannot target areas under thick roofs.</description>
    <iconPath>UI/Abilities/Bombardment</iconPath>
    
    <!-- 5 game days cooldown -->
    <cooldownTicksRange>300000~300000</cooldownTicksRange>
    
    <hostile>true</hostile>
    <targetRequired>true</targetRequired>
    <canUseAoeToGetTargets>false</canUseAoeToGetTargets>
    
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>60</range>
      <warmupTime>2.5</warmupTime>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetSelf>false</canTargetSelf>
        <canTargetPawns>true</canTargetPawns>
        <canTargetBuildings>true</canTargetBuildings>
      </targetParams>
    </verbProperties>
    
    <comps>
      <li Class="CerebrexRebalance.CompProperties_AbilityOrbitalStrike">
        <explosionRadius>4.9</explosionRadius>
        <explosionCount>4</explosionCount>
        <durationTicks>300</durationTicks>
      </li>
    </comps>
  </AbilityDef>
</Defs>
